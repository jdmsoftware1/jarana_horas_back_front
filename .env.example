# ============================================
# CONFIGURACIÓN DE LA EMPRESA
# ============================================
COMPANY_NAME=AliadaDigital
COMPANY_LOGO_URL=https://tu-dominio.com/logo.png
PRIMARY_COLOR=#8B7355
SECONDARY_COLOR=#D4C4B0
ACCENT_COLOR=#4D5B36

# ============================================
# BASE DE DATOS NEON
# ============================================
# Rama principal de Neon (main)
DATABASE_URL=postgresql://neondb_owner:password@ep-xxx-pooler.neon.tech/neondb?sslmode=require

# Rama de desarrollo/demo de Neon (opcional)
# Para usar otra rama, cambia el endpoint (ep-xxx) por el de la rama deseada
# NEON_BRANCH=demo
# DATABASE_URL=postgresql://neondb_owner:password@ep-xxx-demo-pooler.neon.tech/neondb?sslmode=require

# Base de datos Neon para multi-tenant (redirección de empresas)
# Esta es la BD centralizada que contiene la tabla 'tenants' para todas las empresas
NEON_TENANT_URL=postgresql://neondb_owner:password@ep-xxx-pooler.neon.tech/neondb?sslmode=require

# ============================================
# AUTENTICACIÓN
# ============================================
# JWT
JWT_SECRET=tu-secret-super-largo-minimo-32-caracteres-aqui
JWT_REFRESH_SECRET=otro-secret-diferente-muy-largo-aqui
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=otro-secret-para-sesiones-muy-largo

# Google OAuth 2.0
GOOGLE_CLIENT_ID=tu-client-id-de-google-console.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu-client-secret-de-google
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
# En producción: https://tu-dominio.com/auth/google/callback

# Emails autorizados (separados por comas)
AUTHORIZED_EMAILS=admin@AliadaDigital.com,manager@AliadaDigital.com,user@AliadaDigital.com
# O usar dominio completo:
# AUTHORIZED_DOMAIN=@AliadaDigital.com

# ============================================
# OPENAI (Chat IA)
# ============================================
OPENAI_API_KEY=sk-proj-tu-clave-de-openai-aqui

# ============================================
# SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development
# En producción: production

# URLs del frontend (para CORS y OAuth redirects)
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173

# ============================================
# MONITOREO Y LOGS
# ============================================
LOG_LEVEL=info
# Opciones: error, warn, info, debug

# Sentry (opcional, para monitoreo de errores)
# SENTRY_DSN=https://tu-sentry-dsn-aqui

# ============================================
# RATE LIMITING
# ============================================
# Ventana de tiempo en milisegundos (900000 = 15 minutos)
RATE_LIMIT_WINDOW_MS=900000
# Máximo de peticiones por ventana de tiempo
# En desarrollo usa 1000+, en producción 100-200
RATE_LIMIT_MAX_REQUESTS=1000
# Límite de intentos de login
LOGIN_RATE_LIMIT_MAX=10
LOGIN_RATE_LIMIT_WINDOW_MS=900000

# ============================================
# FEATURES (Activar/Desactivar funcionalidades)
# ============================================
# Chat básico de IA en el portal del empleado
ENABLE_AI_CHAT=true

# Utilidades avanzadas de IA: Embeddings, Insights, Gestión de Conocimiento
# Si está en false, no se mostrarán pestañas de IA Insights ni Gestión IA
ENABLE_AI_UTILS=true

ENABLE_2FA=true
ENABLE_GOOGLE_AUTH=true
ENABLE_ACCESS_LOGS=true
